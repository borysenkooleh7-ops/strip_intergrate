# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/usdt-payment
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/usdt-payment

# Stripe (Get your keys from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Exchange Rate API (Optional - using Binance public API by default)
COINGECKO_API_KEY=your_api_key_optional

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com (enable "App Passwords" in Google Account settings)
# For SendGrid: smtp.sendgrid.net
# For Mailgun: smtp.mailgun.org
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=USDT Payment <noreply@usdtpayment.com>

# Logging
LOG_LEVEL=info
